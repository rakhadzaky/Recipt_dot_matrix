{
     "pageFormat": {
         "pageLength": 50,
         "pageWidth": 100,
         "usePageLengthFromPrinter": false
     },
     "template": {
         "header": [ "PT. XYZ" ],
         "detail": [
             "                                                                         ${alamat}",
             "                                                                                         ${tanggal}",
             {
                "table": "listbarang",
                "border": true,
                "columns": [
                    { "caption": "Nama Barang", "source": "nama_barang", "width": 30, "wrap": true },
                    { "caption": "Qty", "source": "qty::right", "width": 10 },
                    { "caption": "Harga", "source": "harga::right", "width": 30 },
                    { "caption": "Jumlah", "source": "total::right", "width": 30 }
                ]
             },
            "Jumlah :                                                                                   ${total}",
            "      Penerima,                                                                   Pengirim         ",
            "                                                                    ",
            "                                                                    ",
            "                                                                    ",
            "      ${penerima:20}                                                        (Rusbandoyo)       "
         ]
     }
 }